	<update id = "update"
	parameterType="it.exolab.gestionaleTL.model.User">
	   update user set 
	     cf=#{cf}
	     , nome=#{nome}
	   	 , cognome=#{cognome}
	   	 , email=#{email}
	   	 , password=#{password}
	   	 , telefono=#{telefono}
	   	 , data_in=#{data_in}
	   	 , data_out=#{data_out}
	   	 , id_ruolo=#{id_ruolo}
	   	 , id_abitazione=#{id_abitazione}
	   where
	   id = #{id}
	 
	</update>
	
	
	<delete id = "delete" parameterType="Integer" >
	   delete from user where id = #{id}
	</delete>	
	
	
	<select id = "find" resultType = "it.exolab.gestionaleTL.model.User" parameterType="Integer">
	   SELECT * FROM user  where id = #{id}
	</select>
	
	<select id = "findByEmail" resultType = "it.exolab.gestionaleTL.model.User" parameterType="String">
	   SELECT * FROM user  where email = #{email}
	</select>
	
	<select id = "findByEmailAndPassword" resultType = "it.exolab.gestionaleTL.model.User">
	   SELECT * FROM user  where email = #{email} AND PASSWORD = #{password}
	</select>
	
