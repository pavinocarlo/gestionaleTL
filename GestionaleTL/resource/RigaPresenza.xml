<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
 <mapper namespace="it.exolab.gestionaleTL.mapper.RigaPresenzaMapper">

	<insert id = "insert"
	parameterType="it.exolab.gestionaleTL.mapper.RigaPresenzaMapper" 
	useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		   insert into riga_presenza (id_riunione, id_abitazione, id_user, adesione, presenza) values (
		   	 #{id_riunione}
		   , #{id_abitazione}
		   , #{id_user}
		   , #{adesione}
		   , #{presenza}
		   )
		   
		</insert>
		
			
		<update id = "update"
		parameterType="it.exolab.gestionaleTL.mapper.RigaPresenzaMapper">
		   update riga_presenza set 
		     id_riunione=#{id_riunione}
		   , id_abitazione=#{id_abitazione}
		   , id_user=#{id_user}
		   , adesione=#{adesione}
		   , presenza=#{presenza}
		   where
		   id = #{id}
		 
		</update>
	
	
	<delete id = "delete" parameterType="Integer" >
	   delete from riga_presenza where id = #{id}
	</delete>	
	
	
	<select id = "find" resultType = "it.exolab.gestionaleTL.mapper.RigaPresenzaMapper" parameterType="Integer">
	   SELECT * FROM riga_presenza  where id = #{id}
	</select>
	
	
  	<select id = "findAll" resultType = "it.exolab.gestionaleTL.mapper.RigaPresenzaMapper">
	   SELECT * FROM riga_presenza
	</select>
	
	
	
	
	
	
	
	
 </mapper>